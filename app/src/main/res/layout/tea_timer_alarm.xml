<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarm_background"
    android:orientation="vertical"
    android:textColor="#000000"
    android:weightSum="1">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.00"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/AlarmCancelBtn"
            android:layout_width="40sp"
            android:layout_height="33sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="15sp"
            android:background="@drawable/buttonshape"
            android:enabled="true"
            android:text="@string/alarm_cancel_btn"
            android:textColor="#000000"
            android:textSize="18sp"
            android:onClick="alarmCancelBtn"
            android:layout_weight="0.10" />

        <Button
            android:id="@+id/AlarmSaveBtn"
            android:layout_width="40sp"
            android:layout_height="33sp"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="80sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/buttonshape"
            android:enabled="true"
            android:text="@string/alarm_save_btn"
            android:textColor="#000000"
            android:textSize="18sp"
            android:onClick="alarmSaveBtn"
            android:layout_weight="0.10" />
    </LinearLayout>
</LinearLayout>